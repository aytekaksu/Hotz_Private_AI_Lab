{
  "name": "ai-assistant-workspace",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "cd apps/web && bun run dev",
    "build": "cd apps/web && bun run build",
    "start": "cd apps/web && bun run start",
    "db:migrate": "cd apps/web && bun run db:migrate",
    "setup:buildx": "bun run scripts/setup-buildx.ts",
    "verify": "cd apps/web && bun run verify",
    "deploy": "bun run scripts/deploy.ts",
    "backup": "bun run scripts/backup.ts",
    "restore": "bun run scripts/restore.ts",
    "provision:tls": "bun run scripts/provision-tls.ts"
  }
}
